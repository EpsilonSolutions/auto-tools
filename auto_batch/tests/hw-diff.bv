# cdh batch inputs
# variables
name := hw
N := 100

BEGIN :: types
sig1 := G1; sig2 := G1
M := ZR
D := GT; V := GT; U := GT
w := G2; Z := G2; h := G2
z := G2; A := G2; r := ZR; n := ZR
i := ZR; g := G2
END :: types

BEGIN :: constant
g, w, Z, h
END :: constant

#U := e(u, g^a)
#V := e(v, g^a)
#D := e(d, g^a)
BEGIN :: precompute
n := lg_i
END :: precompute

BEGIN :: public
U, V, D
END :: public

BEGIN :: signature
sig1, sig2, r, i, n
END :: signature

BEGIN :: message
M
END :: message

# same signer configuration
message := N
public := N
signature := N
# sort based on the state variable, s
sort := sig#3

verify := ( e(sig1, g) == ((U^M) * (V^r) * D * e(sig2, ((w^n) * ((z^i) * h)))) )

BEGIN :: latex
sig1 := \sigma_1
sig2 := \sigma_2
Z := z
n := \lceil\lg(i)\rceil
END :: latex
